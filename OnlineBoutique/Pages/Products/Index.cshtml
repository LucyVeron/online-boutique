@page
@model OnlineBoutique.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Vendor Admin Page";
}

<h1>Vendor Page</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form class="mb-4 bg-white rounded">
    <p>
        <label class="block mb-2 text-sm font-bold text-gray-700">Category: </label>
        <select class="border rounded px-3 py-2" asp-for="ProductCategory" asp-items="Model.Categories">
            <option></option>
        </select>
        <div>
            <label class="block mb-2 text-sm font-bold text-gray-700">
                Title:
                <input class="w-full px-3 py-2 leading-tight text-gray-700 border rounded appearance-none focus:outline-none" type="text" asp-for="SearchString" />
            </label>
            <input class="px-2" type="submit" value="Filter" />
        </div>
    </p>
</form>
<table class="table border">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
